<div class="container-fluid p-4" style="
    padding-top: 5px!important">
    <div class=" row">
        <div class="card mt-0 mx-auto portal-card-styling">
            <div class="card-header customer-navbar-styling">
                <nav class="navbar navbar-light customer-navbar-styling justify-content-between">
                    <a class="navbar-brand lookupLogo">Appointments</a>
                    {{!-- This will actually be a date range selecter and search --}}
                    <form class="form-inline">
                        <input class="form-control mr-sm-2 search-width-styling responsive-search-icon" type="search"
                            placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i
                                class="fas fa-search"></i></button>
                    </form>
                </nav>
            </div>
            <div class="card-body p-0 h-100">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th scope="col" class="responsive-appt-id">Appt ID</th>
                                <th scope="col" class="responsive-appt-time">Appointment Time</th>
                                <th scope="col" class="responsive-appt-fullName">Full Name</th>
                                <th scope="col" class="responsive-contact-number">Contact Number</th>
                                <th scope="col">Email</th>
                                <th scope="col" class="responsive-appt-notes">Notes</th>
                                <th scope="col" class="responsive-save-changes"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <form>
                            <tbody>
                                {{#each appointments}}
                                <tr>
                                    <td>{{this.id}}</td>
                                    <td>{{this.pretty_start_time}}</td>
                                    <td>{{this.Customer.firstName}} {{this.Customer.mName}} {{this.Customer.lastName}}
                                    </td>
                                    <td>{{this.Customer.phone}}</td>
                                    <td>{{this.Customer.email}}</td>
                                    <td>{{this.note}}</td>
                                    <td class="text-center edit-del-styling edit">
                                        <a class="btn btn-primary edit-del-effect" style="background: rgb(109,117,125)"
                                            data-id="{{this.id}}" data-toggle="collapse"
                                            data-target="#collapse{{this.id}}" role="button" aria-expanded="false"
                                            aria-controls="collapse{{this.id}}">
                                            <i class="fas fa-edit edit-del-icons"></i>
                                        </a>
                                    </td>
                                    <td class="text-center edit-del-styling"> <button type="button" data-id={{this.id}}
                                            class="btn btn-primary edit-del-effect delete"
                                            style="background: darkred"><i
                                                class="fas fa-trash-alt edit-del-icons"></i></button>
                                    </td>
                                </tr>
                                <tr class="collapse" id="collapse{{this.id}}">
                                    <td>{{this.id}}</td>
                                    <td>
                                        <div class="form-group">
                                            <div class="input-group date" id="datetimepicker{{this.id}}"
                                                data-target-input="nearest">
                                                <input type="text" id="appt-date{{this.id}}"
                                                    class="form-control datetimepicker-input"
                                                    data-target="#datetimepicker{{this.id}}"> </input>
                                                <div class="input-group-append" data-target="#datetimepicker{{this.id}}"
                                                    data-toggle="datetimepicker">
                                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>{{this.Customer.firstName}} {{this.Customer.mName}} {{this.Customer.lastName}}
                                    </td>
                                    <td>{{this.Customer.phone}}</td>
                                    <td>{{this.Customer.email}}</td>
                                    <td>
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="note{{this.id}}"
                                                placeholder={{this.note}}></input>
                                        </div>
                                    </td>
                                    <td class="text-center"><button type="button" data-id={{this.id}}
                                            class="btn btn-primary save-edit" id="saveSummaryApptBtn{{this.id}}">Save
                                            Changes</button>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </form>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

