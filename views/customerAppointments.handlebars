<table class="table table-striped mb-0">
    <thead>
        <tr>
            <th scope="col" class="responsive-appt-id">Appt ID</th>
            <th scope="col" class="responsive-appt-time">Appointment Time</th>
            <th scope="col" class="responsive-appt-notes">Notes</th>
            <th scope="col" class="responsive-save-changes"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {{#each app}}
        <tr id="accordion-{{this.id}}">
            <th scope="row">{{this.id}}</th>
            <td id="currentTime{{this.id}}">{{this.start_time}}</td>
            <td id="currentNote{{this.id}}">{{this.note}}</td>
            <td class="text-center edit-del-styling">
                <a class="btn btn-primary edit-del-effect" style="background: rgb(109,117,125)" data-edit="{{this.id}}"
                    data-toggle="collapse" href="#collapseExample{{this.id}}" role="button" aria-expanded="false"
                    aria-controls="collapseExample{{this.id}}">
                    <i class="fas fa-edit edit-del-icons"></i>
                </a>
            </td>
            <td class="text-center edit-del-styling"> <a class="btn btn-primary edit-del-effect"
                    style="background: darkred" data-delete="{{this.id}}" role="button">
                    <i class="fas fa-trash-alt edit-del-icons"></i>
                </a></td>
        </tr>

        <tr class="collapse" id="collapseExample{{this.id}}" data-parent="#accordion-{{this.id}}">
            <th scope="row"></th>
            <td class="pb-0">
                <div class="form-group">
                    <div class="input-group date" id="datetimepickerportal{{this.id}}" data-target-input="nearest">
                        <input type="text" id="appt-date{{this.id}}" class="form-control datetimepicker-input"
                            data-target="#datetimepickerportal{{this.id}}"> </input>
                        <div class="input-group-append" data-target="#datetimepickerportal{{this.id}}"
                            data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                </div>
            </td>
            <td> <input type="text" id="notes{{this.id}}" class="form-control" placeholder="Notes">
            </td>
            <td class="text-center"><button type="button" class="btn btn-primary" id="editApptPortalBtn{{this.id}}">Save
                    Changes</button>
            </td>
            <td></td>
        </tr>
        {{/each}}
    </tbody>
</table>